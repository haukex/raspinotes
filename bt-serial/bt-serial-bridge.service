[Unit]
Description=Serial-to-Bluetooth Bridge
Requires=bluetooth.service
After=bluetooth.service

[Service]
Type=idle
Restart=always
Environment="PYTHONUNBUFFERED=1"
ExecStart=/usr/local/bin/bt_serial_bridge.py --init-bt --bt-uuid=94f39d29-7d6d-437d-973b-fba39e49d4ee /dev/ttyUSB0 /dev/ttyUSB1
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target